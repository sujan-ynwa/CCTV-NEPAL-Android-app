<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cv_purchaseHistory">

    <RelativeLayout
        android:id="@+id/relativeLayout_addToCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvPurchaseHistoryProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_orange"
            android:layout_margin="@dimen/margin_small_vertical"
            android:text="10 mega pixel camera 1160"/>

        <TextView
            android:id="@+id/tvPurchaseHistoryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/tvPurchaseHistoryProductName"
            android:layout_marginLeft="@dimen/margin_small_vertical"
            android:text="Rs 12,000"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tvPurchaseHistoryQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_below="@+id/tvPurchaseHistoryPrice"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvPurchaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="18dp"
            android:padding="5dp"
            android:text="2019-12-22"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>