<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ProductDetails">

   <ScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="vertical">

               <ImageView
                   android:id="@+id/ivProductImage"
                   android:layout_width="match_parent"
                   android:layout_gravity="center"
                   android:layout_height="245dp"
                   android:src="@drawable/ic_computer"
                   android:background="@color/light_grey"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="#303F9F">
           <TextView
               android:id="@+id/tvProductName"
               android:layout_marginTop="@dimen/margin_small_vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/margin_small_vertical"
               android:textSize="@dimen/title_text_size"
               android:text="Name"
               android:textStyle="bold"
               android:textColor="#ffffff"
               />
               <TextView
                   android:id="@+id/tvCompanyName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="25sp"
                   android:layout_marginTop="5dp"
                   android:text="BY: ABCD company"
                   android:textColor="#ffffff"
                   android:layout_marginLeft="@dimen/margin_small_vertical"/>
           <TextView
               android:id="@+id/tvPrice"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Price"
               android:textColor="#ffffff"
               android:layout_gravity="right"
               android:layout_marginRight="10dp"
               android:textStyle="bold"
               android:textSize="@dimen/text_small_title"/>
           </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/ivDescriptionIcon"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/description_icon"
                   android:layout_marginBottom="15dp"
                   android:clickable="true"
                   android:focusable="true"
                   android:onClick="showDescription"
                   android:layout_marginLeft="@dimen/margin_small_vertical"
                   />
               <TextView
                   android:id="@+id/tvDescriptionTitle"
                   android:text="@string/description"
                   android:gravity="center_vertical"
                   android:textSize="20sp"
                   android:textColor="@color/black"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:layout_toRightOf="@id/ivDescriptionIcon"
                   android:layout_marginLeft="25dp"
                   android:clickable="true"
                   android:focusable="true"
                   android:onClick="showDescription"
                   />
               <ImageView
                   android:id="@+id/ivdescriptionDropDown"
                   android:layout_width="38dp"
                   android:layout_height="38dp"
                   android:src="@drawable/drop_down_arrow_icon"
                   android:layout_toRightOf="@id/tvDescriptionTitle"
                   android:layout_marginTop="5dp"
                  android:layout_marginLeft="-50dp"
                   android:clickable="true"
                   android:focusable="true"
                   android:onClick="showDescription"
                   />
               <ImageView
                   android:id="@+id/ivWarrantyIcon"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_below="@id/tvDescriptionContent"
                   android:src="@drawable/warranty_icon"
                   android:layout_marginBottom="15dp"
                   android:layout_marginLeft="@dimen/margin_small_vertical"
                   android:clickable="true"
                   android:focusable="true"
                   android:onClick="showWarranty"/>
               <TextView
                   android:id="@+id/tvWarrantyTitle"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:layout_below="@id/tvDescriptionContent"
                   android:layout_toRightOf="@id/ivWarrantyIcon"
                   android:layout_marginLeft="25dp"
                    android:text="@string/warranty"
                   android:gravity="center_vertical"
                   android:textSize="20sp"
                   android:textColor="@color/black"
                   android:clickable="true"
                   android:focusable="true"
                   android:onClick="showWarranty"
                   />
               <ImageView
                   android:id="@+id/ivWarrantyDropDown"
                   android:layout_width="38dp"
                   android:layout_height="38dp"
                   android:src="@drawable/drop_down_arrow_icon"
                   android:layout_below="@id/tvDescriptionContent"
                   android:layout_toRightOf="@id/tvWarrantyTitle"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="-50dp"
                   android:clickable="true"
                   android:focusable="true"
                   android:onClick="showWarranty"
                   />

               <!--for showing the description after clicking -->
                <TextView
                    android:id="@+id/tvDescriptionContent"
                    android:background="@color/light_grey"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/tvDescriptionTitle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/description_detail_text_size"
                    android:padding="5dp"
                    android:visibility="gone"

                    />
               <!--for showing the warranty info after clicking -->
               <TextView
                   android:id="@+id/tvWarrantyContent"
                   android:layout_below="@id/tvWarrantyTitle"
                   android:background="@color/light_grey"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:textSize="@dimen/description_detail_text_size"
                   android:padding="5dp"
                   android:visibility="gone" />
           </RelativeLayout>


           <Button
               android:id="@+id/btnAddToCart"
               android:layout_marginTop="160dp"
               android:background="#E64A19"
               android:layout_marginLeft="90dp"
               android:layout_marginBottom="5dp"
               android:layout_marginRight="90dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="@string/add_to_cart"
               android:textSize="25sp"
               android:textColor="#ffffff"
               android:drawableRight="@drawable/ic_cart_white"
               />
       </LinearLayout>
   </ScrollView>


</LinearLayout>