<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_small_vertical"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginBottom="@dimen/margin_small_vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/cv_addToCart">

    <RelativeLayout
        android:id="@+id/relativeLayout_addToCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAddToCartProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/dark_orange"
            android:layout_margin="@dimen/margin_small_vertical"
            android:text="CCTV NEPAL"/>

        <TextView
            android:id="@+id/tvAddToCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/tvAddToCartProductName"
            android:layout_marginLeft="@dimen/margin_small_vertical"
            android:text="Rs 12,000"
            android:textColor="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/ivPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_below="@+id/tvAddToCartPrice"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_below="@+id/tvAddToCartPrice"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/ivMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus"
            android:layout_below="@+id/tvAddToCartPrice"
            android:layout_marginTop="19.5dp"
            android:layout_marginLeft="80dp"
            />
        <ImageView
            android:id="@+id/ivAddToCartProductImage"
            android:layout_width="130dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_computer"
            android:layout_height="match_parent"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>