<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProductMenu"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="@dimen/margin_small_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="@dimen/margin_small_vertical"
            android:id="@+id/ivProductImage"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@color/cardview_dark_background"/>
        <TextView
            android:id="@+id/tvProductName"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivProductImage"
            android:text="@string/app_name"
            android:textSize="@dimen/title_text_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small_vertical"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivProductImage"
            android:layout_below="@id/tvProductName"
            android:textColor="#000000"
            android:text="Price:"
            android:textSize="@dimen/text_small_title"/>
        <TextView
            android:id="@+id/tvSpecs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrice"
            android:layout_toRightOf="@id/ivProductImage"
            android:layout_marginBottom="@dimen/margin_small_vertical"
            android:text="specs"
            android:textSize="15dp"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>